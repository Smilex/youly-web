doctype html		
html(lang="en")
	head
		include meta
		title="Youly | Blog"
		include style
	
	body(onload="load()")
		include header
		.container-fluid.yly-m-t
			.container.yly-m-t
				.col-xs-12.col-sm-9#blog_item-wrapper
					- each blog in blogs
						include blog_item
				.hidden-xs.col-sm-3#blog_vertical-right-navbar
					include blog_right
		include nav_buttom
		include footer
		include script


		script.
			// Gives ".vertical-right-navbar" the same height as Press Content
			function load() {
				var h = $('#blog_item-wrapper').height();
				$('#blog_vertical-right-navbar').height(h);
			}