.row.blog_item(id="#{blog._id}")
	.col-xs-6.col-sm-2.blog_item_author_img
		img.img-circle(src="#{blog.img}")
	.col-xs-12.col-sm-9
		.row
			.col-xs-12.blog_item_author_date
				span= blog.date
		.row
			.col-xs-12
				h1.blog_item_title= blog.title
		.row
			.col-xs-12.blog_item_author_date
				span by - 
					a(href="#")= blog.author
		.row
			.col-xs-12.blog_item_post
				span= blog.post
		.row.blog_item_share
			.col-xs-12
				a(href="#", title="Share on Facebook")
					img(src="img/social/facebook_round.png")
				a(href="#", title="Share on Google+")
					img(src="img/social/pluss_round.png")
				a(href="#", title="Share on Twitter")
					img(src="img/social/twitter_round.png")
				a(href="mailto:?subject=#{blog.title}&body=%0D%0A%0D%0Ahttp://www.youly.dk/blog##{blog._id}", title="Email a friend")
					img(src="img/social/envelope_round.png")


				.modal.fade(tabindex="-1", id="blog_modal_#{blog._id}" role="dialog", aria-labelledby="blog_label_#{blog._id}", aria-hidden="true")
					.modal-dialog.modal-sm
						.modal-content
							form(method="POST", action="/mail", target="_blank" id="blog_form_#{blog._id}")
								.modal-header
									button.close(type="button", data-dismiss="modal", aria-hidden="true") &times;
									h2.yly-c-youly.modal-title(id="blog_label_#{blog._id}" style="margin-top: 0px;")= blog.title
								.modal-body
									.input-group(style="width: 100%;")
										h5 Your friend(s) email	
										input.form-control(type="text", name="email", placeholder="Email*", style="margin-bottom: 15px;")
									.input-group(style="width: 100%;")
										h5 Leave a short message
										textarea.form-control(rows="5", name="message", placeholder="Write something...", style="max-width: 100%; margin-top: 0px;")
								.modal-footer(style="padding-top: 0px")
										.btn-group(style="margin-top: 10px;")
											button.btn.btn-youly(type="button") Send!
