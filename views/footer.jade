.container-fluid.yly_footer

	<!-- Footer for SM or higher only -->
	.container.hidden-xs
		.col-xs-12.col-sm-3(style="margin-left: 40px;")
			h4(style="margin-bottom: 15px;") LEARN MORE
			include footer_list_learn_more

		.col-xs-12.col-sm-4
			h4(style="margin-bottom: 15px;") GET IN TOUCH
			include footer_list_get_in_touch
				li
				<!-- Link to trigger newsletter_modal -->
				a(href="#myModal", data-toggle="modal", data-target="#myModal") Newsletter

				<!-- newsletter_modal -->
				.modal.fade#myModal(tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true", style="color: #000;")
					.modal-dialog
						.modal-content
							.modal-header
								button.close(type="button", data-dismiss="modal", aria-hidden="true") &times;
								h4.modal-title.yly-c-youly#myModalLabel Subscribe to our newsletter
							include newsletter_modal



	<!-- Footer for XS only -->
	.container.visible-xs
		.col-xs-12
			span.navbar-toggle.glyphicon.glyphicon-chevron-down.yly-footer-xs(type="button", data-toggle="collapse", data-target="#nav-collapse22", style="margin-top: -5px; cursor: pointer;")
			h4
				a(href="#nav-collapse22", data-toggle="collapse", data-target="#nav-collapse22") LEARN MORE
			.collapse.navbar-collapse#nav-collapse22
				include footer_list_learn_more

		.col-xs-12
			span.navbar-toggle.glyphicon.glyphicon-chevron-down(type="button", data-toggle="collapse", data-target="#nav-collapse23", style="margin-top: -5px; cursor: pointer;")
			h4
				a(href="#nav-collapse23", data-toggle="collapse", data-target="#nav-collapse23") GET IN TOUCH
			.collapse.navbar-collapse#nav-collapse23
				include footer_list_get_in_touch
					li
					<!-- Link to trigger newsletter_modal -->
					a(href="#myModal2", data-toggle="modal", data-target="#myModal2") Newsletter

					<!-- newsletter_modal -->
					.modal.fade#myModal2(tabindex="-1", role="dialog", aria-labelledby="myModalLabel2", aria-hidden="true", style="color: #000;")
						.modal-dialog
							.modal-content
								.modal-header
									button.close(type="button", data-dismiss="modal", aria-hidden="true") &times;
									h4.modal-title.yly-c-youly#myModalLabel Subscribe to our newsletter
								include newsletter_modal



