						img(src="/img/branding/youly_logo.png", style="height: 100%;")
				style.
					.navbar-nav-sm > li > a {
						padding: 35px 10px;
					}
				.collapse.navbar-collapse#nav-collapse(style="width: 100%;")
					ul.nav.navbar-nav.navbar-right.navbar-nav-sm
						include nav_btn
