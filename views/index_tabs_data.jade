script.
	function data_drop() {
		$('.data_dropdown').click(function(e) {
			e.stopPropagation();
		});
		$('.data-img-top').click(function() {
			console.log(this);
			$('.data-img-top').each(function() {
				$(this).removeClass('data-img-top_active');
			})
			$(this).addClass('data-img-top_active');
		});
	}
	function data_close() {
		$('body').click();
		$('.data-img-top').removeClass('data-img-top_active');
	}
