script.
	function mnf_off() {
		setTimeout(function() {
			$('#data_mnf_hvr').css("display", "noen");
		}, 250);
	}
	function mnf_on() {
		$('#data_mnf_hvr').css("display", "block");
	}

	function bnd_off() {
		setTimeout(function() {
			$('#data_bnd_hvr').css("display", "noen");
		}, 250);
	}
	function bnd_on() {
		$('#data_bnd_hvr').css("display", "block");
	}
