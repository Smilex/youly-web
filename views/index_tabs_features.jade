<!-- index_tabs_features SM or higher -->
style.
	.tabs_yly {
		background-color: #e4e9f0;
		padding: 0px;
		min-height: 500px;
	}
	.tabs-right > .nav-tabs,
	.tabs-left > .nav-tabs {
		border: 0 none;
		background-color: #fff;
		min-height: 700px;
		min-width: 210px;
	}
	.tab-content > .tab-pane,
	.pill-content > .pill-pane {
		display: none;
	}
	.tab-content > .active,
	.pill-content > .active {
		display: block;
	}
	.tabs-left > .nav-tabs > li,
	.tabs-right > .nav-tabs > li {
		float: none;
		background-color: #fff;
		padding: 0px;
		margin: 0px;
		border: 0 none;
	}
	.tabs-left > .nav-tabs > li > a,
	.tabs-right > .nav-tabs > li > a {
		min-width: 74px;
		margin-right: 0;
		margin-bottom: 0px;
		border: 0 none;
		padding: 20px 40px;
		font-weight: 700;
		font-size: 1em;
		color: #333;
	}
	.tabs-left > .nav-tabs {
		float: left;
	}
	.tabs-left > .nav-tabs > li > a:hover,
	.tabs-left > .nav-tabs > li > a:focus {

	}
	.tabs-left > .nav-tabs .active > a,
	.tabs-left > .nav-tabs .active > a:hover,
	.tabs-left > .nav-tabs .active > a:focus {
		color: #000;
		border: 0 none;
		border-radius: 0px;
		background-color: #e4e9f0 !important;
		border-left: 10px solid #333;
		padding-left: 30px;
	}
	.tabs-right > .nav-tabs {
		float: right;
	}
	.tabs-right > .nav-tabs > li > a {
	}
	.tabs-right > .nav-tabs > li > a:hover,
	.tabs-right > .nav-tabs > li > a:focus {
	}
	.tabs-right > .nav-tabs .active > a,
	.tabs-right > .nav-tabs .active > a:hover,
	.tabs-right > .nav-tabs .active > a:focus {
		color: #000;
		border: 0 none;
		border-radius: 0px;
		background-color: #e4e9f0 !important;
		border-right: 10px solid #333;
		padding-right: 30px;
	}
	.tab-content_h3 {
		color: #333;
		width: 100%;
		padding: 0px 15%;
		text-align: justify;
	}
	.tab-content-h3-r {
		color: #333;
		margin-left: 150px;
		text-align: justify;
	}
	.tab-content-xs {
		padding-top: 40px;
		padding-bottom: 40px;
	}
	.tab-soon {
		background-image: url("../img/icons/vertical_tabs_soon.png");
		background-position: right top;
		background-repeat: no-repeat;
		background-size: auto 100%;
	}
.hidden-xs
	.container-fluid.tabs_yly#awdawdawd
		.tabs-left
			ul.nav.nav-tabs
				li.active
					a(href="#tab_fet_bar", data-toggle="tab") Barcode Scanning
				li
					a(href="#tab_fet_man", data-toggle="tab") Manuel Search
				li
					a(href="#tab_fet_alt", data-toggle="tab") Alternative Finder
				li
					a(href="#tab_fet_fam", data-toggle="tab") Family Friendly
				li
					a(href="#tab_fet_nut", data-toggle="tab") Nutritional Info
				li.tab-soon
					a(href="#tab_fet_die", data-toggle="tab") Diets


