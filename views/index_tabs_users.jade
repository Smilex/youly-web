	.container-fluid(style="padding: 40px 0px; background-color: #e4e9f0;")
		.text-center
			div
				.col-xs-12(style="margin-top: 30px;")
					h2 Allergies
				include users/allergies
			div
				.col-xs-12(style="margin-top: 30px;")
					h2 Veggies
				include users/veggies
