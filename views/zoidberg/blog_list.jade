.dataTables_wrapper.form-inline(role="grid")
		table#table-blogs.table.table-bordered.datatable
			thead
				tr
					th(ng-repeat="heading in headings") {{heading}}
			
			tbody
				tr.gradeA(ng-repeat="blog in blogs" ng-class-odd="'odd'" ng-class-even="'even'")
					td {{blog.title}}
					td {{blog.author}}
					td {{blog.date}}
					td
						.make-switch.has-switch.switch-small(ng-click="publish_toggle(blog)")
							.switch-animate(ng-class="{'switch-on': blog.published, 'switch-off': !blog.published}")
								input(type="checkbox" checked="")
								span.switch-left.switch-small.switch-success ON
								label.switch-small
									i.entypo-globe
								span.switch-right.switch-small OFF
					td
						button.btn.btn-default.btn-sm.btn-icon.icon-left(ng-click="edit(blog)")
							i.entypo-pencil
							span Edit
						button.btn.btn-danger.btn-sm.btn-icon.icon-left(ng-click="delete(blog)")
							i.entypo-cancel
							span Delete
			tfoot
				tr
					th(ng-repeat="heading in headings") {{heading}}

script(id="blog_delete_modal.html" type="text/ng-template")
	.modal-header
		h4.modal-title Confirm Delete
	.modal-body Are you sure you want to delete '{{blog.title}}'?
	.modal-footer
		button.btn.btn-danger(ng-click="ok()") Yes
		button.btn.btn-default(ng-click="cancel()") Cancel
