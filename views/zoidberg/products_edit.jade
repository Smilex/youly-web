style.
	label { margin-top: 5px; }
.panel.panel-dark
	.panel-heading
		.panel-title
			| Edit Product
	.panel-body
		.row
			.col-xs-12.col-sm-6
				.row
					.col-xs-12.col-sm-4
						label
							b Product Image
						.fileinput.fileinput-new(data-provides="fileinput")
							.fileinput-new.thumbnail(style="width: 120px; height: 120px;", data-trigger="fileinput")
								img(src="http://placehold.it/120x120", alt="...")
							.fileinput-preview.fileinput-exists.thumbnail(style="max-width: 120px; max-height: 120px")
							div
								span.btn.btn-white.btn-file
									span.fileinput-new Select image
									span.fileinput-exists Change
									input(type="file", name="...", accept="image/*")
								a.btn.btn-orange.fileinput-exists(href="#", data-dismiss="fileinput") Remove
					.col-xs-12.col-sm-8
						.row
							.col-xs-12
								label
									b Barcode
								input.form-control(type="text", value="{{p_edit.barcode}}",
								name="barcode", ng-minlength="13", required, pattern="[0-9]")
							.col-xs-12
								label
									b Product Name
								input.form-control(type="text", value="{{p_edit.name}}", required)
							.col-xs-12
								label
									b Brand Name
								input.form-control(type="text", value="{{p_edit.brand_name}}", required)
							.col-xs-12
								label
									b Brand Owner
								input.form-control(type="text", value="{{p_edit.brand_owner}}", required)
					.col-xs-12.col-sm-6
						label
							b Additional Description
						input.form-control(type="text", value="{{p_edit.add_desc}}")
					.col-xs-12.col-sm-6
						label(style="width: 100%;")
							b Category
								span.pull-right(data-toggle="dropdown", style="cursor: pointer;") ?
								div.text-center.dropdown-menu.alert-info(role="menu", aria-labelledby="dLabel", style="margin-left: -90%; width: 380%; padding: 15px; color: #222;")
									a(href="zoidberg/pdf/Categories.pdf") Category Tree PDF
						input.form-control(type="text",	value="{{p_edit.category}}", required)
					.col-xs-12.col-sm-6
						label
							b Approval
						input.form-control(type="text", value="{{p_edit.approval}}")
					.col-xs-12.col-sm-6
						label(style="width: 100%;")
							b Allergence / Warning
								span.pull-right(data-toggle="dropdown", style="cursor: pointer;") ?
								ul.dropdown-menu.dropdown_about_cnt.alert-info(role="menu", aria-labelledby="dLabel", style="width: 100%; padding: 15px;")
									li.text-center(style="color: #222;")
										p
											b Allergence
									li
										| hey
						input.form-control(type="text")
				.row
					.col-sm-4
						label
							b Product size
						input.form-control(type="text")
					.col-sm-4
						label
							b Unit
						select.form-control(value="{{p_edit.size_unit}}")
							option Undefined
							option Liter
							option Deceliters
							option Centiliters
							option Milliliters
							option Kilo Grams
							option Grams
					.col-sm-4
						label
							b Type (It is a)
						select.form-control(value="{{p_edit.type}}")
							option Package
							option Stk
							option Bottle
				.row
					.col-sm-4
						label
							b Stk.
						input.form-control(type="text", value="{{p_edit.stk}}")
					.col-sm-4
						label
							b Type
						select.form-control(value="{{p_edit.stk_type}}")
							option Stk
							option Pieces
							option Biscuits
							option Slices
							option Undefined


			.col-xs-12.col-sm-6
				.row
					.col-md-4.col-sm-6
						label
							b Nutritions per
						input.form-control(type="text", value="{{p_edit.nut_pr}}")
					.col-md-4.col-sm-6
						label
							b Unit 
						select.form-control(value="{{p_edit.nut_unit}}")
							option Undefined
							option Liter
							option Deceliters
							option Centiliters
							option Milliliters
							option Kilo Grams
							option Grams
				.row
					.col-md-4.col-sm-6
						label
							b KJ
						input.form-control(type="text", value="{{p_edit.kj}}")
					.col-md-4.col-sm-6
						label
							b Kcal
						input.form-control(type="text", value="{{p_edit.kcal}}")
				.row
					.col-md-4.col-sm-6.col-xs-12
						label
							b Protein
						input.form-control(type="text", value="{{p_edit.protein}}")
					.col-md-4.col-sm-6.col-xs-12
						label(style="width: 100%;")
							b Fat
								span.pull-right(data-toggle="dropdown", style="cursor: pointer;") ?
								ul.dropdown-menu.dropdown_about_cnt.alert-info(role="menu", aria-labelledby="dLabel", style="width: 100%; padding: 15px;")
									li.text-center(style="color: #222;")
										p
											b Fat Instructions
									li
										| hey
						input.form-control(type="text", value="{{p_edit.fat}}")
					.col-md-4.col-sm-6.col-xs-12
						label(style="width: 100%;")
							b Carbohydrate
								span.pull-right(data-toggle="dropdown", style="cursor: pointer;") ?
								ul.dropdown-menu.dropdown_about_cnt.alert-info(role="menu", aria-labelledby="dLabel", style="width: 100%; padding: 15px;")
									li.text-center(style="color: #222;")
										p
											b Carbohydrate Instructions
									li
										| hey
						input.form-control(type="text", value="{{p_edit.carbs}}")
				.row
					.col-xs-12
						label(style="width: 100%;")
							b Other nutritions
								span.pull-right(data-toggle="dropdown", style="cursor: pointer;") ?
								ul.dropdown-menu.dropdown_about_cnt.alert-info(role="menu", aria-labelledby="dLabel", style="width: 100%; padding: 15px;")
									li.text-center(style="color: #222;")
										p
											b Other Nutritions
									li
										| hey
						tags-input.bootstrap(ng-model="nutr", replace-spaces-with-dashes="false")
					.col-xs-12
						label(style="width: 100%;")
							b Ingredients
								span.pull-right(data-toggle="dropdown", style="cursor: pointer;") ?
								ul.dropdown-menu.dropdown_about_cnt.alert-info(role="menu", aria-labelledby="dLabel", style="width: 100%; padding: 15px;")
									li.text-center(style="color: #222;")
										p
											b Ingredients
									li
										| hey
						tags-input.bootstrap(ng-model="ingr", replace-spaces-with-dashes="false")
				.row
					.col-xs-12
						label
							b &nbsp;
					.col-xs-12
						button.pull-right.btn.btn-green Submit Product
